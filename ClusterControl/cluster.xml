<?xml version="1.0" encoding="UTF-8"?>
<cluster_config>
  <launcher title="App Launcher">
    <applications>
      <app name="Directory Listing">
        <exec_envs>
          <exec_env name="verbose_linux" parent="linux_base">
            <env_var label="VR Juggler Debug Level" key="VPR_DEBUG_NFY_LEVEL" value="6" append="false"/>
          </exec_env>
        </exec_envs>
        <commands>
          <command class="Windows XP" env="windows_base">dir</command>
          <command class="Linux" env="linux_base">export</command>
        </commands>
        <tooltip>ls</tooltip>
        <helpURL></helpURL>
        <options>
          <option name="Directory To List" editable="false" tooltip="">
            <choice label="User Directory" selected="true">
              <value class="Linux" flag=""></value>
              <value class="Windows XP" flag='"C:\"'></value>
            </choice>
            <choice label="Root Dir" tooltip="">
              <value class="Linux" flag="">/</value>
              <value class="Windows XP" flag='"C:\"'></value>
            </choice>
          </option>
          <!-- Combobox (maybe editable) -->
          <option name="VR Juggler Debug Level" editable="true" tooltip="VR Juggler Debug Level">
            <choice label="Nothing">
              <value class="linux">0</value>
            </choice>
            <choice label="Verbose">
              <value class="linux">6</value>
            </choice>
          </option>
          <!-- Check box (w/wo text field)-->
          <option editable="false" visible="true" tooltip="Brads nifty glove">
            <choice label="Brad's nifty glove">
              <value class="windows" flag="">win_left_glove.jconf</value>
              <value class="linux.*" flag="">linux_left_glove.jconf</value>
            </choice>
          </option>
          <!-- Check box (w/wo text field)-->
          <option editable="true" visible="false" tooltip="plugin">
            <choice label="SONIX plugin">
              <value class="windows,timmy" flag="-plugin">C:\\path\\to\\openal</value>
              <value class="linux.*" flag="-plugin">/path/to/openal</value>
            </choice>
          </option>
        </options>
      </app>
      <app name="GLX Gears">
        <commands>
          <command class="Linux" env="linux_base">/usr/X11R6/bin/glxgears</command>
        </commands>
        <tooltip>GLX Gears</tooltip>
        <helpURL></helpURL>
        <options>
        </options>
      </app>
      <app name="Cubes">
        <commands>
          <command class="Linux" env="linux_base">/home/dmns/runcubes.sh</command>
        </commands>
        <tooltip>Cubes test application</tooltip>
        <helpURL></helpURL>
        <options>
        </options>
      </app>
    </applications>
    <controls>
    </controls>
    <global_options>
      <option name="VR Juggler Configuration" editable="editable" tooltip="VR Juggler configuration">
        <choice label="Simulator Configuration">
          <value class="Linux" flag="">sim.base.jconf sim.wand.mixin.jconf</value>
        </choice>
        <choice label="Dome Configuration">
          <value class="Linux" flag="">/home/dmns/jconf/cluster_dome.jconf</value>
        </choice>
      </option>
    </global_options>
    <global_environments>
      <env label="Linux" name="linux_base">
        <env_var label="LD_LIBRARY_PATH" key="LD_LIBRARY_PATH" value="${VJ_BASE_DIR}/lib" append="true"/>
        <env_var label="PATH" key="PATH" value="/usr/bin:$VJ_BASE_DIR/bin" append="true"/>
        <env_var label="VR Juggler Location" key="VJ_BASE_DIR" value="/home/aronb/Source/CurrentJuggler" append="false"/>
      </env>
      <env label="Windows" name="windows">
        <env_var label="VR Juggler Location" key="VJ_BASE_DIR" value="C:\\Source\\juggler\\" append="false"/>
        <env_var label="PATH" key="PATH" value="%(VJ_BASE_DIR)\bin" append="true"/>
        <env_var label="PATH" key="PATH" value="%(VJ_BASE_DIR)\lib" append="true"/>
      </env>
    </global_environments>
  </launcher>
  <cluster_node name="infiscape1" hostname="infiscape1" sub_class="master"/>
  <cluster_node name="infiscape2" hostname="infiscape2" sub_class="master"/>
  <cluster_node name="infiscape3" hostname="infiscape3" sub_class="master"/>
</cluster_config>
